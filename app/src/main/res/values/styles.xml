<resources>
    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
    </style>

    <style name="rates_calculator__amount" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/rates_calculator__textColor</item>
    </style>

    <style name="rates_calculator__title" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/rates_calculator__textColor</item>
    </style>

    <style name="rates_calculator__description" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#8B959E</item>
    </style>
</resources>